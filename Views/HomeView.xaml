<UserControl x:Class="GenshinNamecardINICreator.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GenshinNamecardINICreator.Views"
             xmlns:components="clr-namespace:GenshinNamecardINICreator.Components" 
             xmlns:vms="clr-namespace:GenshinNamecardINICreator.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="{StaticResource PrimaryBackground}" FontSize="18">
    <UserControl.Resources>
        <DataTemplate DataType="{x:Type vms:ConvertPageViewModel}">
            <components:ConvertPage />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vms:SettingsPageViewModel}">
            <components:SettingsPage />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vms:CreateNamecardModPageViewModel}">
            <components:CreateNamecardModPage />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vms:NamecardHashesPageViewModel}">
            <components:NamecardHashesPage />
        </DataTemplate>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="2" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.Resources>
                <Style TargetType="{x:Type Button}" BasedOn="{StaticResource BaseButtonStyle}">
                    <Setter Property="Width" Value="{Binding ActualWidth, ElementName=btn_LeftWidth}" />
                    <Setter Property="Command" Value="{Binding ChangeViewCommand}" />
                </Style>
            </Grid.Resources>
            <Button Content="Create Mod" Grid.Row="0" Margin="5" Command="{Binding ChangeViewCommand}" CommandParameter="Create" />
            <Button Content="Convert Image" Grid.Row="1" Margin="5 0 5 5" Command="{Binding ChangeViewCommand}" CommandParameter="Convert" />
            <Button x:Name="btn_LeftWidth" Width="150" Content="Update Hashes" Grid.Row="2" Margin="5 0 5 0" Command="{Binding ChangeViewCommand}" CommandParameter="Hashes" />
            <Button Content="Settings" Grid.Row="3" VerticalAlignment="Bottom" Margin="5 0 5 5" Command="{Binding ChangeViewCommand}" CommandParameter="Settings" />
        </Grid>
        <Rectangle Fill="Black" Grid.Column="1" Grid.RowSpan="10" />
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.Resources>
                <Style x:Key="TopButtonStyle" TargetType="{x:Type Button}" BasedOn="{StaticResource BaseButtonStyle}">
                    <Setter Property="Padding" Value="0" />
                    <Setter Property="Height" Value="{Binding Height, ElementName=txtBox_Folder}" />
                    <Setter Property="Width" Value="{Binding Height, RelativeSource={RelativeSource Mode=Self}}" />
                    <Setter Property="IsTabStop" Value="False" />
                    <Setter Property="Margin" Value="0 0 5 0" />
                </Style>
                <Style x:Key="scvStyle" TargetType="ScrollViewer">
                    <Setter Property="Grid.Row" Value="1" />
                    <Setter Property="Margin" Value="5 0 10 10" />
                    <Setter Property="VerticalScrollBarVisibility" Value="Auto" />
                    <Setter Property="HorizontalScrollBarVisibility" Value="Auto" />
                </Style>
            </Grid.Resources>
            <!--The top row with the two Buttons and Textbox-->
            <DockPanel FlowDirection="RightToLeft" Grid.Row="0" Margin="5 5 10 5">
                <Button ToolTip="Select Destination Folder" Style="{StaticResource TopButtonStyle}" Command="{Binding SelectFolderCommand}">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="1">
                        <Image Source="pack://application:,,,/Icons/open-folder.png" />
                    </StackPanel>
                </Button>
                <Button ToolTip="Refresh Folder List" Style="{StaticResource TopButtonStyle}" Command="{Binding RefreshFolderCommand}">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="1">
                        <Image Source="pack://application:,,,/Icons/refresh.png" />
                    </StackPanel>
                </Button>
                <TextBox x:Name="txtBox_Folder"
                         Height="45"
                         HorizontalAlignment="Stretch"
                         Text="{Binding DestinationFolderPath, Mode=OneWay}"
                         Width="557"
                         IsReadOnly="True"
                         IsTabStop="False"
                         HorizontalScrollBarVisibility="Auto"
                         VerticalContentAlignment="Center"
                         IsUndoEnabled="False" />
            </DockPanel>
            <ScrollViewer Name="scv_Hub" Style="{StaticResource scvStyle}">
                <ContentControl Content="{Binding ActiveView}" />
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
