<UserControl x:Class="GenshinNamecardINICreator.Components.ConfirmationWindowPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GenshinNamecardINICreator.Components"
             xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
             mc:Ignorable="d" 
             FontSize="18" Background="{StaticResource PrimaryBackground}">
    <UserControl.Resources>
        <Style TargetType="{x:Type Button}" BasedOn="{StaticResource BaseButtonStyle}" />
        <CollectionViewSource x:Key="NamecardsViewSource" Source="{Binding Namecards}">
            <CollectionViewSource.SortDescriptions>
                <scm:SortDescription PropertyName="Name" />
            </CollectionViewSource.SortDescriptions>
        </CollectionViewSource>
    </UserControl.Resources>
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock Text="Select Namecard:" 
                       FontWeight="Bold"
                       Foreground="White"
                       Margin="20 20 10 10"
                       Grid.Column="0" 
                       Grid.Row="0">
            </TextBlock>
            <ComboBox x:Name="cbx" 
                      Grid.Column="1" 
                      Grid.Row="0" 
                      Margin="0 20 20 10" 
                      Width="300" 
                      VerticalAlignment="Center" 
                      VerticalContentAlignment="Center"
                      ItemsSource="{Binding Source={StaticResource NamecardsViewSource}}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
                <ComboBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel />
                    </ItemsPanelTemplate>
                </ComboBox.ItemsPanel>
            </ComboBox>
            <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10 10 10 20">
                <Button Content="Create" 
                        Margin="0 0 20 0" 
                        Command="{Binding SubmitCommand}"
                        CommandParameter="{Binding ElementName=cbx, Path=SelectedItem}">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}" BasedOn="{StaticResource SubmitButtonStyle}">
                            <Setter Property="IsEnabled" Value="True" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedIndex, ElementName=cbx}" Value="-1">
                                    <Setter Property="IsEnabled" Value="False" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button Content="Cancel" 
                        Command="{Binding CancelCommand}" />
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
