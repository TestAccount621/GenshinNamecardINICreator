<Window x:Class="GenshinNamecardINICreator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GenshinNamecardINICreator"
        xmlns:views="clr-namespace:GenshinNamecardINICreator.Views" 
        xmlns:vms="clr-namespace:GenshinNamecardINICreator.ViewModels" 
        xmlns:modalcontrol="clr-namespace:ModalControl;assembly=ModalControl"
        xmlns:Behaviors="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        Title="Genshin Namecard Creator" Height="450" Width="850" FontSize="18" Background="LightGray"
        ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Window.Resources>
        <DataTemplate DataType="{x:Type vms:ConfirmationWindowViewModel}">
            <views:ConfirmationWindowView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vms:ProgressBarWindowViewModel}">
            <views:ProgressBarWindowView />
        </DataTemplate>
    </Window.Resources>
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <Grid>
            <views:HomeView DataContext="{Binding HomeViewViewModel}" />
            <modalcontrol:Modal Panel.ZIndex="1" IsOpen="{Binding IsModalOpen}">
                <ContentControl Content="{Binding CurrentModalViewModel}" />
            </modalcontrol:Modal>
        </Grid>
    </ScrollViewer>
</Window>
