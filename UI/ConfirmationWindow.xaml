<Window x:Class="GenshinNamecardINICreator.UI.ConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GenshinNamecardINICreator.UI"
        mc:Ignorable="d"
        Title="Select Namecard" Height="130" Width="425" FontSize="16" 
        Background="LightGray" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Window.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Height" Value="35" />
            <Setter Property="Width" Value="60" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label Content="Select Namecard:" Grid.Row="0" Grid.Column="0" Margin="5" VerticalAlignment="Center" FontWeight="Bold" />
        <ComboBox x:Name="cbx_SelectNamecardToApply" Grid.Row="0" Grid.Column="1" Margin="5" Height="30" Width="250" 
                  VerticalContentAlignment="Center" VerticalAlignment="Center" DisplayMemberPath="Name" />
        <StackPanel Orientation="Horizontal" 
                    Margin="5" 
                    Grid.Row="3" 
                    Grid.Column="0" 
                    Grid.ColumnSpan="3"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top">
            <Button Content="Create" Grid.Column="0" Margin="0,0,75,0" Click="Button_Click_Confirm">
                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="IsEnabled" Value="True" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedIndex, ElementName=cbx_SelectNamecardToApply}" Value="-1">
                                <Setter Property="IsEnabled" Value="False" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Content="Cancel" Grid.Column="1" Click="Button_Click_Cancel" />
        </StackPanel>
    </Grid>
</Window>
