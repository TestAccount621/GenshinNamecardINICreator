<Page x:Class="GenshinNamecardAutomater.UI.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GenshinNamecardAutomater.UI"
      xmlns:validationRules="clr-namespace:GenshinNamecardAutomater.ValidationRules"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="500" Background="LightGray" FontSize="16"
      Title="SettingsPage">
    <Page.Resources>
        <Style x:Key="textBoxBaseStyle" TargetType="{x:Type TextBox}">
            <Setter Property="Height" Value="30" />
            <Setter Property="Width" Value="200" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>
        <Style x:Key="textBoxKeybindVlaidations" TargetType="{x:Type TextBox}" BasedOn="{StaticResource textBoxBaseStyle}">
            <Setter Property="Grid.Column" Value="1" />
            <Setter Property="IsReadOnly" Value="True" />
            <Setter Property="IsReadOnlyCaretVisible" Value="False" />
            <Setter Property="IsUndoEnabled" Value="False" />
            <EventSetter Event="PreviewKeyDown" Handler="TextBoxHotKeys_KeyDown" />
            <EventSetter Event="PreviewKeyUp" Handler="TextBox_PreviewKeyUp" />
        </Style>
    </Page.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label Content="Keybinds:" Grid.Column="0" Grid.Row="1" Margin="5" FontWeight="Bold" />
        <Label Content="Pause:" Grid.Column="0" Grid.Row="2" Margin="20,5,5,5" FontWeight="Bold" />
        <Label Content="Cycle Forward:" Grid.Column="0" Grid.Row="3" Margin="20,5,5,5" FontWeight="Bold" />
        <Label Content="Cycle Backward:" Grid.Column="0" Grid.Row="4" Margin="20,5,5,5" FontWeight="Bold" />
        <Label Content="Randomized Login:" Grid.Column="0" Grid.Row="5" Margin="5" FontWeight="Bold" />
        <TextBox x:Name="txtBox_KeyPause" Grid.Row="2" Style="{StaticResource textBoxKeybindVlaidations}">
            <TextBox.Text>
                <Binding Path="keyPauseText" UpdateSourceTrigger="PropertyChanged"/>
            </TextBox.Text>
        </TextBox>
        <TextBox x:Name="txtBox_KeyCycleForward" Grid.Row="3" Style="{StaticResource textBoxKeybindVlaidations}">
            <TextBox.Text>
                <Binding Path="keyCycleFText" UpdateSourceTrigger="PropertyChanged"/>
            </TextBox.Text>
        </TextBox>
        <TextBox x:Name="txtBox_KeyCycleBackward" Grid.Row="4" Style="{StaticResource textBoxKeybindVlaidations}">
            <TextBox.Text>
                <Binding Path="keyCycleBText" UpdateSourceTrigger="PropertyChanged"/>
            </TextBox.Text>
        </TextBox>
        <ComboBox Name="cbx_RandomLogin" Height="{Binding Height, ElementName=txtBox_KeyCycleBackward}" Width="100" Grid.Column="1" Grid.Row="5" 
                  HorizontalAlignment="Left" VerticalContentAlignment="Center" SelectionChanged="cbx_RandomLogin_SelectionChanged">
            <ComboBoxItem Content="No" />
            <ComboBoxItem Content="Yes" />
        </ComboBox>
    </Grid>
</Page>
